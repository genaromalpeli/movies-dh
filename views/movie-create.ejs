<!DOCTYPE html>
<html>
  <%- include("headerPartial") %>

  <body>
    <a href="/"><button>Volver a la home</button></a>
    <h1>Crea tu pelicula favorita!</h1>
    <form action="/movies/create" method="POST">
      <div>
        <input type="text" name="title" placeholder="title" />
      </div>
      <div>
        <input type="number" min="0" name="awards" placeholder="awards" />
      </div>
      <div>
        <input type="number" name="revenue" placeholder="revenue" />
      </div>
      <div>
        <select name="genre_id">
          <% for (let genre of genres) { %>
          <option value="<%= genre.id %>"> <%= genre.name %> </option>
          <% } %>
        </select>
      </div>
      <div>
        <label>Release Date</label><input type="date" name="release_date" />
      </div>
      <div><label>Length</label><input type="number" name="length" /></div>
      <button>Submit</button>
    </form>
  </body>
</html>
